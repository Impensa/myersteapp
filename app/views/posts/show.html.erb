	<h3><%= @post.title %></h3>
	<small><%= @post.created_at.strftime("%b %d. %y")%>Created By: <%= @post.admin_user.name %></small>
	<p><%= @post.body %></p>
	<p>Category: <%= link_to @post.category.name, category_path(:id => @post.category.id) %></p>
	<p><%= link_to "Back", posts_path %></p>
	<h3>Leave a comment below</h3>
	
	<%= form_for @comment do |f| %>
		<p>
		<%= f.label :name %><br />
		<%= f.text_field :name %>
		</p>

		<p>
		<%= f.label :email %><br />
		<%= f.text_field :email %>
		</p>

		<p>
		<%= f.label :body %><br />
		<%= f.text_area :body %>
		</p>

	
		<%= f.hidden_field :post_id %>
		
		<p>
		<%= f.submit "Post Comment" %>
		</p>
	<% end %>
	<h3>Comments</h3>
	<%= render :partial => 'partials/comment', :collection => @post.comments %>